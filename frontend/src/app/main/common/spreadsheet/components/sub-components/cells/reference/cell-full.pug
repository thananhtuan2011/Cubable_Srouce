.flex.layout-row.layout-gap-6.layout-align-start-start.full-width
	.field-cell__block-content.flex
		cub-chip.layout-row.layout-gap-4(
			*ngFor='let s of data?.selected; ngForTrackByID',
			[class.field-cell__block-content--error]='s.error')
			span.text-truncate(
				[attr.title]='s.data')
				| {{ s.data || ( "SPREADSHEET.LABEL.UN_NAME" | translate ) }}
			button(
				tabindex='-1',
				*ngIf='!readonly',
				(click)='onItemRemoved( s.id )')
				cub-icon(
					name='close',
					size='12px')
		button(
			cubBasicButton,
			iconSize='16px',
			icon='plus-circle',
			*ngIf='!readonly',
			(click)='openExpander()')
	button.field-cell__btn-stick-on-content(
		cubBasicButton,
		iconSize='16px',
		icon='expand',
		(click)='openExpander( true )')
